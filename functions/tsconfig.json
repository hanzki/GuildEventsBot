    "lib": [
      "es6",
      "es2015.promise"
    ],
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "lib",
    "stripInternal": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "spec/**/*"
  ]
}